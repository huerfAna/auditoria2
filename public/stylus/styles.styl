.form
	background white 
	box-shadow 0px 0px 3px grey
	color white-form
	padding 40px
	& .input-group
		position relative
		margin-bottom 32px
		& input[type="text"],
		& input[type="email"],
		& input[type="password"]
		& textarea
			color primary
			width 100%
			outline none
			padding 15px
			background none
			border none
			border-bottom 2px solid light-primary
			&:focus,
			&:active
				outline none
				border-bottom 2px solid primary
			&.error
				border-bottom 2px solid color-danger
				& + label
					color color-danger
		& label
			color primary
		& .label
			position absolute
			top 16px
			left 0px
			font-size 16px
			line-height 16px
			margin-left 16px
			transition all .3s ease
			&.active
				top -12px
				font-size 12px
				line-height 12px 
				color divider-color
				
		&.checkbox label
		&.radio label
			display inline-block
			cursor pointer
			color primary
			position relative
			padding 5px 15px 5px 51px
			font-size 1rem
			border-radius 3px
			transition all 0.3s ease
			&:hover
				background rgba(light-primary, 1)
			&:before
				content: ""
				display inline-block
				width 17px
				height 17px
				position absolute
				left 15px
				top 8px
				border-radius 50%
				background none 
				border 2px solid primary
		&.error
			label
				color color-danger
				&:hover
					background rgba(color-danger, .2)
				&:before
					border 2px solid color-danger
		&.radio
			input[type="radio"]
				display none
				&:checked + label:before
					display none
				&:checked + label
					padding 5px 15px
					background primary
					border-radius 2px
					color white
	input[type="submit"]
		background primary
		border-radius 4px
		cursor pointer
		border 2px solid white-form
		color white 
		display inline-block
		padding 15px
		width 100%	
		font-family 'Ubuntu'
		transition all 0.3s ease
		&:hover
			background #1976d2

.checkbox label
	display inline-block
	cursor pointer
	color primary
	position relative
	padding 5px 15px 5px 51px
	font-size 1rem
	border-radius 3px
	transition all 0.3s ease
	&:hover
