.loader
	position relative
	display block
	margin auto
	padding 0
	width 220px
	height 15px 
	& i 
		position relative
		display inline-block
		margin 0 8px 
		width 10px
		height 30px
		border-radius 5px
		border solid color-info
		border-width 0 1px 0 1px
		background rgba(color-info, 0.8)
		animation tilt infinite 5s cubic-bezier(0.955, -0.010, 1.000, 1.000)
		transform-origin 100% 100%
		&:before
			content ''
			position absolute
			z-index -1
			bottom 0
			display block 
			width 5px 
			height 5px
			background transparent
			box-shadow 0 2px rgba(0,0,0,0.3)
			animation stretch infinite 5s cubic-bezier(0.955, -0.010, 1.000, 1.000)
			opacity 0
			transform-origin 0% 0%
		&:nth-child(2),
		&:nth-child(2)::before
			animation-delay .3s
			background rgba(color-primary, 0.8)
			border solid color-primary
			border-width 0 1px 0 1px
		&:nth-child(3),
		&:nth-child(3)::before
			animation-delay .6s
			background rgba(color-danger, 0.8)
			border solid color-danger
			border-width 0 1px 0 1px
		&:nth-child(4),
		&:nth-child(4)::before
			animation-delay .9s
			background rgba(color-success, 0.8)
			border solid color-success
			border-width 0 1px 0 1px
		&:nth-child(5),
		&:nth-child(5)::before
			animation-delay 1.2s
			background rgba(#34495e, 0.8)
			border solid #34495e
			border-width 0 1px 0 1px
		&:last-of-type
			animation-name tilt-last
		&:last-of-type:before
			animation-name stretch-last

@keyframes tilt
	10% 
		transform: rotate(70deg) 
	60% 
		transform: rotate(70deg) 
	70% 
		transform: rotate(0deg) 
		
@keyframes tilt-last
	10%
		transform: rotate(90deg)
	60%
		transform: rotate(90deg)
	70%
		transform: rotate(0deg)
		
@keyframes strech
	10%
		transform: rotate(-70deg)
		width: 10px
		opacity: 1
		left: 0px
		bottom: -1px
	60%
		transform: rotate(-70deg)
		width: 10px 
		opacity: 1 
	70%
		transform: rotate(0deg)
		width: 5px
		height: 5px 
		opacity: 0
		
@keyframes strech-last
	10%
		transform: rotate(-90deg)
		width: 10px 
		height: 2px
		opacity: .5
		left: 3px
		bottom: -1px
	60%
		transform: rotate(-90deg)
		width: 10px
		height: 2px
		opacity: .5
	70%
		transform: rotate(0deg)
		width: 5px 
		height: 5px
		opacity: 0
		
